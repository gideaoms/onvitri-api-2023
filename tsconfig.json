{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src", "vitest.config.ts"]
}
